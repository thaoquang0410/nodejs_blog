<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../layout/head'); %>
    <title>Document</title>
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
      tinymce.init({
        selector: '#mytextarea'
      });
    </script>
</head>
<body>
    <%- include('../layout/nav'); %>

    <div class="panel panel-default">
        <div class="panel-heading">
            Edit Post
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-6">
                    <% if(data && data.error){ %>
                        <div id="login-alert" class="alert alert-danger col-sm-12">
                            <%= data.error %>
                        </div>
                    <%}%>   
                    <form action="/admin/post/new" method="POST" role="form">
                        <input class="id" type="hidden" name="id" value="<% if(data && data.post){%><%= data.post.title%><%}%>">
                        <div class="form-group">
                            <label for="">Title</label>
                            <input type="text" class="form-control title" name="title" placeholder="Title"
                                value="<% if(data && data.post){%><%= data.post.title%><%}%>"
                            >
                        </div>
                        <div class="form-group">
                            <label for="">Content</label>
                            <textarea id="mytextarea" type="text" class="form-control" name="content" placeholder="Content">
                                <% if(data && data.post){%><%= data.post.content%><%}%>
                            </textarea>
                        </div>
                        <div class="form-group">
                            <label for="">Author</label>
                            <input type="text" class="form-control author" name="author" placeholder="Author" 
                                value="<% if(data && data.post){%><%= data.post.author%><%}%>"
                            >
                        </div>

                        <input type="button" value="Edit" name="" class="btn btn-success post_edit" >
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="/static/js/post.js"></script>
</body>
</html>